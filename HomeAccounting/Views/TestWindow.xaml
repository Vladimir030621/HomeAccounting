<Window x:Class="HomeAccounting.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:HomeAccounting.Views"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2" Background="{StaticResource PrimaryHueMidBrush}" Height="50"/>

        <Grid Grid.Row="1">
            <Menu >
                <MenuItem Header="Operations" Height="70" Width="200" HorizontalAlignment="Center">
                    <MenuItem Header="Add Income" Width="200" Height="30" x:Name="AddIncome" VerticalAlignment="Center"/>
                    <Separator/>
                    <MenuItem Header="Add Expense" Width="200" Height="30" x:Name="AddExpense" VerticalAlignment="Center"/>
                </MenuItem>
            </Menu>
        </Grid>
    </Grid>
</Window>
